<%= form_with(model: @student, local: true, class: "styled-form") do |form| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>
      <ul>
        <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="student_name">Name</label>
    <div class="field with-icon">
      <%= image_tag 'user.svg', alt: 'User icon', class: 'icon' %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="student_subject">Subject</label>
    <div class="field with-icon">
      <%= image_tag 'text.svg', alt: 'Subject icon', class: 'icon' %>
      <%= form.text_field :subject, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="student_marks">Mark</label>
    <div class="field with-icon">
      <%= image_tag 'bookmark.svg', alt: 'Mark icon', class: 'icon' %>
      <%= form.number_field :marks, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Add", class: "btn btn-primary btn-add-student" %>
  </div>
<% end %>
