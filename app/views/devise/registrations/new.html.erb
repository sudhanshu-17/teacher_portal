<div class="container">
  <h2 class="signup-title">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="signup-field">
    <%= f.label :email, class: "signup-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "signup-input" %>
  </div>

  <div class="signup-field">
    <%= f.label :username, class: "signup-label" %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "signup-input" %>
  </div>

  <div class="signup-field">
    <%= f.label :password, class: "signup-label" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "signup-input" %>
  </div>

  <div class="signup-field">
    <%= f.label :password_confirmation, class: "signup-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "signup-input" %>
  </div>

  <div class="signup-actions">
    <%= f.submit "Sign up", class: "signup-button" %>
  </div>
<% end %>
  <%= render "devise/shared/links" %>

</div>